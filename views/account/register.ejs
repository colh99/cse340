<!-- Content Heading -->

<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>
    
<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

<!-- Register view -->
<form action="/account/register" method="post">
    <label for="firstname">First Name:</label>
    <br>
    <input type="text" name="account_firstname" id="firstname" required value="<%= locals.account_firstname %>">
    <br>
    <label for="lastname">Last Name:</label>
    <br>
    <input type="text" name="account_lastname" id="lastname" required value="<%= locals.account_lastname %>">
    <br>
    <label for="email">Email:</label>
    <br>
    <input type="email" name="account_email" id="email" required value="<%= locals.account_email %>">
    <br>
    <label for="password">Password:</label>
    <br>
    <input type="password" name="account_password" id="password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required>
    <br>
    <span id="password-requirements-label">Password must contain at least 12 characters, including one of each:</span> 
    <ul id="password-requirements">
      <li>lowercase letter</li>
      <li>uppercase letter</li>
      <li>number</li>
      <li>special character</li>
    </ul>
    <br>
    <input type="submit" value="Register">
</form>