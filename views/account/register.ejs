<!-- Content Heading -->

<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>



<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

<!-- Register view -->
<form action="/account/register" method="post">
    <label for="firstname">First Name:</label>
    <input type="text" name="account_firstname" id="firstname" required>
    <label for="lastname">Last Name:</label>
    <input type="text" name="account_lastname" id="lastname" required>
    <label for="email">Email:</label>
    <input type="email" name="account_email" id="email" required>
    <label for="password">Password:</label>
    <input type="password" name="account_password" id="password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required>
    <span>There must be at least 12 characters, one must be a number, one must be a lowercase letter, one must be a capital letter, and one must be a non-alphanumeric character.</span>
    <input type="submit" value="Register">
</form>